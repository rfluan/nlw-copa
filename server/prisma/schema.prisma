generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Poll {
  id        String   @id @default(cuid())
  title     String
  code      String   @unique
  createdAt DateTime @default(now())
}

model Participant {
  id        String   @id @default(cuid())
}

model User {
  id        String   @id @default(cuid())
}

model Game {
  id        String   @id @default(cuid())
}

model Guess {
  id        String   @id @default(cuid())
}